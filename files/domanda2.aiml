    </category>
    
    <category>
        <pattern>Domanda 2 <set>invecchiante</set></pattern>
        <template>
            <condition name="pozione">
                <li value="Invecchiante">
                    Bravo! Hai selezionato <set name="answ1"><star /></set>
                    <think><set name="voto"><srai>XADD <get name="voto" /> XS 3</srai></set></think>
                    <reply>

                        <text>Prossima domanda</text>
                        <postback>Domanda 3</postback>
                    </reply>
                </li>
                <li>
                    Sbagliato! Hai selezionato <set name="answ1"><star /></set>
                    <think><set name="voto"><srai>XSUB <get name="voto" /> XS 1</srai></set></think>
                    <reply>
                    <text>Riprova</text>
                    <postback>Domanda 2</postback>
            </reply>
                </li>
            </condition>
        </template>
